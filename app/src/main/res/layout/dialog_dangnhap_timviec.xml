<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:gravity="center"
                android:text="@string/dialog_dangnhap_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnKhong"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/dialog_dangnhap_khong"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/color_main_timviec"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="@drawable/custom_button_dialog_thongbao_timviec"
                />
            <Button
                android:id="@+id/btnCo"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/dialog_dangnhap_co"
                android:textStyle="normal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:textColor="@color/color_main_timviec"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="@drawable/custom_button_dialog_thongbao_timviec"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>