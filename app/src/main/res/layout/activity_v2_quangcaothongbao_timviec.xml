<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiv2.QuangCaoThongBaoTimViecActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/color_main_timviec"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="@dimen/size_icon_toolbar"
                android:layout_height="@dimen/size_icon_toolbar"
                android:layout_centerVertical="true"
                android:padding="12.5dp"
                android:src="@mipmap/ic_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/notification_ads"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/size_text_toolbar" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_continue"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/coupon_information"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size_13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorViewSpace" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imv_logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/upload_logo" />

                    <RelativeLayout
                        android:id="@+id/rl_upload_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/custom_button_danhgia_timviec"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imv_upload_logo"
                                android:layout_width="@dimen/size_icon_normal"
                                android:layout_height="@dimen/size_icon_normal"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/ic_upload_white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="@string/upload_logo"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="@dimen/text_size_15sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <EditText
                        android:id="@+id/ed_title"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec"
                        android:hint="@string/enter_title"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColorHint="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/description"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <EditText
                        android:id="@+id/ed_description"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/custom_edittext_mota_dangtuyen_themvieclam"
                        android:gravity="left"
                        android:hint="@string/enter_description"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:textColorHint="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorViewSpace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/appling_time"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size_13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/start"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec">

                        <TextView
                            android:id="@+id/tv_time_start"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/ic_number_down"
                            android:gravity="center"
                            android:hint="@string/time"
                            android:padding="10dp"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="@dimen/text_size_13sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_date_start"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec">

                        <TextView
                            android:id="@+id/tv_date_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imv_date_start"
                            android:hint="@string/started_date"
                            android:paddingLeft="10dp"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="@dimen/text_size_13sp" />

                        <ImageView
                            android:id="@+id/imv_date_start"
                            android:layout_width="@dimen/size_icon_normal"
                            android:layout_height="@dimen/size_icon_normal"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/ic_calendar_red" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Kết thúc"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec">

                        <TextView
                            android:id="@+id/tv_time_end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/ic_number_down"
                            android:gravity="center"
                            android:hint="@string/time"
                            android:padding="10dp"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="@dimen/text_size_13sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_date_end"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec">

                        <TextView
                            android:id="@+id/tv_date_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imv_date_end"
                            android:hint="@string/end_date"
                            android:paddingLeft="10dp"
                            android:textColor="@color/colorText"
                            android:textColorHint="@color/colorText"
                            android:textSize="@dimen/text_size_13sp" />

                        <ImageView
                            android:id="@+id/imv_date_end"
                            android:layout_width="@dimen/size_icon_normal"
                            android:layout_height="@dimen/size_icon_normal"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/ic_calendar_red" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorViewSpace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/appling_address"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size_13sp" />

                <LinearLayout
                    android:id="@+id/lnl_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnl_add_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_clear" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/add_branch"
                        android:textColor="@color/color_main_timviec"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorViewSpace" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorViewSpace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cost"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <EditText
                        android:id="@+id/ed_value"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec"
                        android:gravity="center_vertical|left"
                        android:hint="@string/enter_cost"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColorHint="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorViewSpace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/quantity"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <EditText
                        android:id="@+id/ed_num_coupon"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="/Coupon"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorViewSpace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/discount"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <EditText
                        android:id="@+id/ed_num_degree"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edittext_danhgia_timviec"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorText"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="%"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorViewSpace" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/upload_cover" />

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_upload_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_button_danhgia_timviec"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/imv_upload_banner"
                            android:layout_width="@dimen/size_icon_normal"
                            android:layout_height="@dimen/size_icon_normal"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/ic_upload_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="@string/upload_cover"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="@dimen/text_size_15sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button_danhgia_timviec"
        android:text="@string/continuee"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp" />
</RelativeLayout>